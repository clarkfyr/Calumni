%div{:class=>"container-fluid", :id=>"Company"}
  %div{:class=>"row"}
    %div{:class=>"container"}
      = form_tag search_path, method: :get do
        = label_tag :search, "Search_Box" 
        = text_field_tag :search, params[:search], placeholder: "Name, Companies"
        = submit_tag "Search"
      

.container
  .row
    .col-md-12
      %h3.text-center
        %strong COMPANIES
    .col-md-3.mb-5
      = link_to search_path(:search=>"amazon",:type=>"company") do
        %img{:height => "100", :src => "assets/amazon.jpg"}/
    .col-md-3.mb-5
      = link_to search_path(:search=>"google",:type=>"company") do
        %img{:height => "100", :src => "assets/google.png"}/
    .col-md-3.mb-5
      = link_to search_path(:search=>"fb",:type=>"company") do
        %img{:height => "100", :src => "assets/fb.png"}/
    .col-md-3.mb-5
      = link_to search_path(:search=>"snap",:type=>"company") do
        %img{:height => "100", :src => "assets/snap.png"}/
  %hr


.container
