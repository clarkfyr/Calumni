%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "Calumni", home_path, id: "logo"
    - if not ishomepage
      .input-group-btn.navbar-form.navbar-left
        = form_tag search_path, :method => 'get', class: 'input-group'   do
          = text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Name, Company ', id: "nav_search",autocomplete:"off"
          = submit_tag "Search", class: "btn btn-default"

    %ul.nav.navbar-nav.navbar-right
      - if cookies[:email]
        - if @people.first.role =='mentee'
          %li= link_to "Become a mentor", become_mentor_path
      %li= link_to "Home",   home_path
      - if cookies[:email]
        %li= link_to "Mailbox",conversations_path
      - if not cookies[:email]
        %li= link_to "Log in", create_account_path
      - else
        / display dropdown
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = cookies[:firstname]
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Profile",profile_path
            %li.divider{:role => "separator"}
            %li= link_to 'Feedback', add_feedback_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}
            %li= link_to "Logout",logout_path

#modal-window.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog","tabindex"=>"-1"}





